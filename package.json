{
  "name": "youtube-detox",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:ext": "pnpm --filter @yt-detox/extension dev",
    "dev:api": "pnpm --filter @yt-detox/backend dev",
    "build": "pnpm -r run build",
    "build:ext": "pnpm --filter @yt-detox/extension build",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "playwright test",
    "test:api": "playwright test --project=api",
    "test:api:complete": "playwright test --project=api-complete",
    "test:extension": "playwright test --project=extension",
    "test:docker": "docker compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "test:docker:interactive": "docker compose -f docker-compose.test.yml run --service-ports test-runner shell",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "playwright": "^1.58.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
