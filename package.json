{
  "name": "youtube-detox",
  "version": "0.5.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:ext": "pnpm --filter @yt-detox/extension dev",
    "dev:api": "pnpm --filter @yt-detox/backend dev",
    "build": "pnpm -r run build",
    "build:ext": "pnpm --filter @yt-detox/extension build",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "prettier --write 'packages/{extension,shared}/src/**/*.{ts,tsx}' '*.json'",
    "format:check": "prettier --check 'packages/{extension,shared}/src/**/*.{ts,tsx}' '*.json'",
    "typecheck": "pnpm -r run typecheck",
    "test": "playwright test",
    "test:api": "playwright test --project=api",
    "test:api:complete": "playwright test --project=api-complete",
    "test:extension": "playwright test --project=extension",
    "test:docker": "docker compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "test:docker:interactive": "docker compose -f docker-compose.test.yml run --service-ports test-runner shell",
    "test:sync": "playwright test --project=sync-flow",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:live": "playwright test --project=live-youtube",
    "test:live:xvfb": "xvfb-run --auto-servernum --server-args='-screen 0 1280x960x24' playwright test --project=live-youtube",
    "deploy:build": "pnpm build:ext && cd packages/extension/dist && zip -r ../youtube-detox.zip .",
    "version:patch": "bash scripts/bump-version.sh patch --tag",
    "version:minor": "bash scripts/bump-version.sh minor --tag",
    "version:major": "bash scripts/bump-version.sh major --tag"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
