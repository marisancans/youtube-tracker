# YouTube Detox Backend Configuration

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ytdetox

# Google OAuth - Get from Google Cloud Console
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Security Settings
REQUIRE_AUTH=true   # Set to false for local development without OAuth
DEBUG=false

# Rate Limiting
RATE_LIMIT=100/minute
RATE_LIMIT_SYNC=20/minute

# Payload Limits
MAX_REQUEST_SIZE_MB=5
MAX_VIDEO_SESSIONS_PER_SYNC=200
MAX_EVENTS_PER_SYNC=1000

# CORS - comma-separated origins
# For production, restrict to your extension ID:
# CORS_ORIGINS=["chrome-extension://your-extension-id"]
CORS_ORIGINS=["chrome-extension://*","http://localhost:*","http://127.0.0.1:*"]
